
<div class="container mt-5" data-controller="recipe">
  <div class="col-12">
    <div class="col-5 float-start">
      <div>
        <h1>Smart Recipes</h1>
      </div>
      <div>
        <textarea id="ingredients" class="form-control" data-recipe-target="ingredients"></textarea>
      </div>

      <div class="mt-1">
        <button class="btn btn-primary" data-action="recipe#generate" data-recipe-target="generateButton">
          Generate Recipe
        </button>
      </div>
    </div>
    
    <div class="col-6 float-end">
      <div class="card" data-recipe-target="recipeContainer" hidden>
        <div class="card-header">
          <h4 data-recipe-target="description"></h4>
        </div>
        <div class="card-body">
          <p><b>Ingredients:</b></p>
          <ul data-recipe-target="recipeIngredients"></ul>
          <br/>
          <p><b>Preparation:</b></p>
          <p data-recipe-target="preparation"></p>
          <br/>
          <p><b>Level:</b></p>
          <p data-recipe-target="level"></p>
          <br/>
          <p><b>Time:</b></p>
          <p data-recipe-target="time"></p>
          
        </div>
      </div>

      <div data-recipe-target="recipeError" class="alert alert-danger" role="alert" hidden>
        Couldn't generate a valid recipe. Please, provide new list of ingredients
      </div>

      <div class="d-flex justify-content-center">
        <div class="spinner-border text-primary" role="status"  data-recipe-target="spinner" hidden>
          <span class="visually-hidden">Loading...</span>
        </div>
      </div>
    </div>
  </div>
</div>
